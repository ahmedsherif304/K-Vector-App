<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/logo"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/about"
        android:onClick="about"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOWARDS INFINITY"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:textColor="#f40000"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="60dp"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:paddingLeft="120dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#09189f"
            android:id="@+id/text"
            android:paddingBottom="20dp"
            />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/b1"
        android:background="@drawable/magazine"
        android:onClick="Magazines"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/academic"
        android:layout_marginBottom="150dp"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/b2"
        android:onClick="Academic"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/juniors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b2"
        app:layout_constraintBottom_toTopOf="@id/b2"
        android:id="@+id/b3"
        android:onClick="Juniors"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/events"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b1"
        android:id="@+id/b4"
        android:onClick="Events"
        />





    </android.support.constraint.ConstraintLayout>

